---
import BaseLayout from '@layouts/BaseLayout.astro';
import Button from '@components/Button.astro';
import Card from '@components/Card.astro';
import Badge from '@components/Badge.astro';
import Divider from '@components/Divider.astro';
---

<BaseLayout
  title="Component Showcase"
  description="A showcase of all available components in the starter kit"
>
  <div class="stack">
    <section class="stack">
      <h1>Component Showcase</h1>
      <p class="text-muted">All available components in this Astro starter kit.</p>
    </section>

    <Divider />

    <!-- Typography -->
    <section class="stack">
      <h2>Typography</h2>
      <h1>Heading 1</h1>
      <h2>Heading 2</h2>
      <h3>Heading 3</h3>
      <h4>Heading 4</h4>
      <p>This is a paragraph with <strong>bold text</strong> and <em>italic text</em>.</p>
      <p class="text-muted">This is muted text.</p>
    </section>

    <Divider />

    <!-- Buttons -->
    <section class="stack">
      <h2>Buttons</h2>
      <div class="flex gap-3 flex-wrap">
        <Button variant="default">Default Button</Button>
        <Button variant="primary">Primary Button</Button>
        <Button variant="ghost">Ghost Button</Button>
        <Button variant="outline">Outline Button</Button>
      </div>
    </section>

    <Divider />

    <!-- Badges -->
    <section class="stack">
      <h2>Badges</h2>
      <div class="flex gap-3 flex-wrap">
        <Badge variant="default">Default</Badge>
        <Badge variant="success">Success</Badge>
        <Badge variant="warning">Warning</Badge>
        <Badge variant="error">Error</Badge>
        <Badge variant="info">Info</Badge>
      </div>
    </section>

    <Divider />

    <!-- Cards -->
    <section class="stack">
      <h2>Cards</h2>
      <div class="grid grid--cols-3">
        <Card variant="default" padding="md">
          <h3>Default Card</h3>
          <p>This is a default card with medium padding.</p>
        </Card>
        
        <Card variant="elevated" padding="md">
          <h3>Elevated Card</h3>
          <p>This card has an elevated appearance with shadow.</p>
        </Card>
        
        <Card variant="bordered" padding="md">
          <h3>Bordered Card</h3>
          <p>This card has a prominent border.</p>
        </Card>
      </div>
    </section>

    <Divider />

    <!-- Layout Examples -->
    <section class="stack">
      <h2>Layout Utilities</h2>
      
      <h3>Stack (Vertical Spacing)</h3>
      <div class="stack">
        <Card padding="sm"><p>Item 1</p></Card>
        <Card padding="sm"><p>Item 2</p></Card>
        <Card padding="sm"><p>Item 3</p></Card>
      </div>

      <h3>Grid (Responsive)</h3>
      <div class="grid grid--responsive">
        <Card padding="sm"><p>Grid Item 1</p></Card>
        <Card padding="sm"><p>Grid Item 2</p></Card>
        <Card padding="sm"><p>Grid Item 3</p></Card>
        <Card padding="sm"><p>Grid Item 4</p></Card>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .text-muted {
    color: var(--text-muted);
  }
</style>
